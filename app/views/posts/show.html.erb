<div class="show-post">
    <h4 class="show-post-id">
        Post ID: <%= params[:id] %>
    </h4>
    
    
    <div class="show-post-details">
        <p>
            <em>made: <%= @post.created_at.strftime("%b %d, '%y") %></em>
        </p>
        <h3 class='post-title'>
            <strong><%= @post.title %></strong>
        </h3>
        <h4 class='post-body'>
            <%= @post.body %>
        </h4>
    </div>
    
    <div class="show-post-edit-delete">
        <h5>
            <%= link_to 'Edit', edit_post_path(@post.topic, @post), class: 'edit-post-link' %>
        </h5>
        <h5>
            <%= link_to 'Delete', [@post.topic, @post], method: :delete, class: 'delete-post-link', data: {confirm: "Are you sure you want to delete this post?"} %>
        </h5>
    </div>
    
</div>